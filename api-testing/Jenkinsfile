pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
               withMaven(maven: 'maven_3_8_1'){
               bat 'mvn clean compile'
               }
            }
        }
        stage('Testing') {
            steps {
                withMaven(maven: 'maven_3_8_1'){
                    bat 'mvn clean test'
                }
            }
        }
        stage('Publish reports') {
            publishHTML([
            reportDir: './test-output',
            reportFiles: 'index.html',
            reportName: 'HTML Report'
            ])
            }
        }
